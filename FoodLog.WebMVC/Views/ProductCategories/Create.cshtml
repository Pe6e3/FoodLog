@using FoodLog.DAL.Entities;
@model ProductCategory

<div class="container createNew">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-center my-2"> Добавить новую категорию для продукта</h4>
            <h1 class="text-center mb-4"> @ViewBag.ProdName</h1>

            <form asp-action="Create" method="post">
                <input type="hidden" id="ProductGuid" name="ProductGuid" value="@ViewBag.ProdGuid">

                <div class="form-group row my-2">
                    <label for="CategoryGuid" class="col-sm-4 col-form-label">Категория</label>
                    <div class="col-sm-5">
                        <select class="form-control" id="CategoryGuid" name="CategoryGuid" required>
                            <option value="">Выберите Категорию</option>
                            @foreach (var category in ViewBag.AllCategories)
                            {
                                <option value="@category.Guid">@category.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="Percent" class="col-sm-4 col-form-label">Процент</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Percent" name="Percent" required>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .createNew * input {
        min-width: 60px;
        max-width: 300px;
    }

    .createNew * form {
        min-width: 600px;
    }
</style>
