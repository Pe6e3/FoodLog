@using FoodLog.WebMVC.ViewModels;
@model StorageLineVM

@{
    ViewData["Title"] = "Добавить новую строку склада";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center my-5">Добавить товар на склад</h2>
            <form asp-action="Create" method="post">


                <div class="form-group row my-2">
                    <label for="ProductGuid" class="col-sm-4 col-form-label">Продукт</label>
                    <div class="col-sm-5">
                        <select class="form-control" id="ProductGuid" name="ProductGuid" required>
                            <option value="">Выберите продукт</option>
                            @foreach (var product in ViewBag.AllProducts)
                            {
                                <option value="@product.Guid">@product.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="CurrentWeight" class="col-sm-4 col-form-label">Текущий вес</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="CurrentWeight" name="CurrentWeight" required>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="CurrentCost" class="col-sm-4 col-form-label">Текущая стоимость</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="CurrentCost" name="CurrentCost" required>
                    </div>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>
