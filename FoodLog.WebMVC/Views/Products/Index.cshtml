@using FoodLog.DAL.Entities
@model IEnumerable<Product>


<div class="container">
    <div class="d-flex justify-content-end mb-2">
        <a class="btn btn-outline-danger" asp-controller="Products" asp-action="Create"> Новый продукт </a>
    </div>

    <table class="cinereousTable">
        <thead>
            <tr>
                <th>Название</th>
                <th>Калории</th>
                <th>Белки</th>
                <th>Жиры</th>
                <th>Углеводы</th>
                <th>Оценка вреда</th>
                <th>Процент на списание</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><a asp-action="Update" asp-route-prodGuid="@product.Guid">@product.Name</a></td>
                    <td>@product.Calories</td>
                    <td>@product.Prot</td>
                    <td>@product.Fat</td>
                    <td>@product.Carb</td>
                    <td>@product.HarmScore</td>
                    <td>@product.TrashPercentage</td>
                    <td>
                        <a asp-action="Delete" asp-route-prodGuid="@product.Guid"><i class="fa-regular fa-trash-can" style="font-size: 15px; color: red;"></i></a>
                        <a asp-action="Create" asp-controller="ProductCategories" asp-route-prodGuid="@product.Guid"><i class="fa-regular fa-rectangle-list" style="font-size: 15px; color: blue;"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
