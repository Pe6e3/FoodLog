@using FoodLog.DAL.Entities
@model Product

@{
    ViewData["Title"] = "Добавить новый продукт";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center my-5">Добавить новый продукт</h2>
            <form asp-action="Create" method="post">

                <div class="form-group row my-2">
                    <label for="Name" class="col-sm-4 col-form-label">Название продукта</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="Name" name="Name" required>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="Calories" class="col-sm-4 col-form-label">Каллории</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="Calories" name="Calories" required>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="Prot" class="col-sm-4 col-form-label">Белки</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="Prot" name="Prot" required>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="Fat" class="col-sm-4 col-form-label">Жиры</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="Fat" name="Fat" required>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="Carb" class="col-sm-4 col-form-label">Углеводы</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="Carb" name="Carb" required>
                    </div>
                </div>

                <div class="form-group row my-2">
                    <label for="HarmScore" class="col-sm-4 col-form-label">Оценка вреда</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="HarmScore" name="HarmScore" required>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary">Добавить</button>
                </div>
            </form>
        </div>
    </div>
</div>
