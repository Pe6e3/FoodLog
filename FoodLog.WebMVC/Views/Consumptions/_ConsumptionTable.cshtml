@*Список всех потреблений List  Consumption.cs  *@
@*Partial*@
@using FoodLog.DAL.Entities;


@model List<Consumption>


<div class="container">
    <h2 class="mb-4">Потребление</h2>


    <table class="cinereousTable">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Название</th>
                <th>Чистый вес</th>
                <th>Стоимость</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consumption in Model)
            {
                <tr>
                    <td>@consumption.Date.ToShortDateString()</td>
                    <td>@consumption.Product.Name </td>
                    <td>@consumption.Netto</td>
                    <td>@(consumption.Purchase?.Price * consumption.Netto / 1000)</td>
                    <td>
                        <a asp-action="Delete" asp-route-consumeGuid="@consumption.Guid">
                            <i class="fa-regular fa-trash-can" style="font-size: 15px; color: red;"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />


<script src="/js/jquery.min.js"></script>
<script src="/js/storage.js"></script>

